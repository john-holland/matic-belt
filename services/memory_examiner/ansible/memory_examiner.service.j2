[Unit]
Description=Memory Examiner Service
After=network.target

[Service]
Type=simple
User={{ ansible_user }}
WorkingDirectory={{ install_dir }}
ExecStart=/bin/bash -c 'source $HOME/.nvm/nvm.sh && nvm use {{ node_version }} && npm start'
Restart=always
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target 